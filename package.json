{
  "name": "tr808-synth",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,css}\"",
    "ci": "npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitest/ui": "^2.1.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vitest": "^2.1.4"
  }
}
